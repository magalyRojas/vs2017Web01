@model IEnumerable<App.Entities.Base.Categoria>


@{
    ViewBag.Title = "Lista de Categorías";
}

<h2>Lista de Categorías</h2>
@*Sin usar Htlm helper*@
@*<a class="btn btn-success" href="/Categoria/Create">Nueva Categoría</a>*@

@*usando html helper*@
@Html.ActionLink("Nueva Categoría", "Create", "Categoria", new { @class = "btn btn-success" })
<p></p>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.CategoriaID })">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

