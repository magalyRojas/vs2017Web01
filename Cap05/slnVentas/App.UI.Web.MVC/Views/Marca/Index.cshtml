@model IEnumerable<App.Entities.Base.Marca>
@{
    ViewBag.Title = "Index";
}

<h2>Lista de Marcas</h2>
@Html.ActionLink("Nueva Marca", "Create", "Marca", new { @class = "btn btn-success" })
<p></p>
<table class="table">
    <tr>
        <th>Nombre</th>
        <th>Descripción</th>

    </tr>
    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.MarcaID })">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
        
    }

</table>