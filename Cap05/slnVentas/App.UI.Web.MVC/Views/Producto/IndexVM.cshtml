@model App.UI.Web.MVC.Models.ViewModels.ProductoSearchViewModel 

@{
    ViewBag.Title = "Index";
}

<h2>Lista de productos</h2>

@using (Html.BeginForm())
{
    
    @Html.TextBoxFor(item=>item.filterByName, new { @class = "form-control" })
    <br />
    <label>Buscar por categoría</label>
    <br />
    @Html.DropDownListFor(item => item.filterByCategoria, new SelectList(Model.Categorias,"CategoriaID","Nombre"),"Todos", new { @class = "form-control" })
    
    <br />
    <br />
    <label>Buscar por marca</label>
    <br />
    @Html.DropDownListFor(item =>item.Marcas, new SelectList(Model.Marcas,"MarcaID","Nombre"),"Todos", new { @class = "form-control" })
    
    <br />
    <button class="btn btn-primary"> Buscar </button>
}

<table class="table">
    <tr>
        <td>Código</td>
        <td>Nombre</td>
        <td>Categoría</td>
        <td>Marca</td>
        <td>Precio Mayor</td>
        <td>Precio Menor</td>
        <td>Stock Actual</td>
    </tr>
    @foreach (var item in Model.Productos)
    {
        <tr>
            <td>@item.ProductoCode</td>
            <td>@item.Nombre</td>
            <td>@item.Categoria.Nombre</td>
            <td>@item.Marca.Nombre</td>
            <td>@item.PrecioMayor</td>
            <td>@item.PrecioMenor</td>
            <td>@item.StockActual</td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.ProductoID })">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>
