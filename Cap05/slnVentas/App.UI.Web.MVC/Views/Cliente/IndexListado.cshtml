@model IEnumerable<App.Entities.Base.Cliente>
<table class="table table-bordered">
    <tr>
        <th>Documento</th>
        <th>Apellidos y Nombres</th>
        <th>Dirección</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.DocumentoIdentidad</td>
            <td>@item.ApellidoPaterno @item.ApellidoMaterno @item.Nombre</td>
            <td>@item.Direccion</td>
            <td>
                <a href="#" onclick="app.helpers.showModal('ClienteCreatePopup', '@Url.Action("Edit", new {id=item.ClienteID})')">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }
</table>