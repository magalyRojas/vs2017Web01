@model IEnumerable<App.Entities.Base.UnidadMedida>
@{
    ViewBag.Title = "Lista de Unidad de Medida";
}

<h2>Lista de Unidad de Medida</h2>
@Html.ActionLink("Nueva Unidad de Medida", "Create", "UnidadMedida", new { @class = "btn btn-success" })
<p></p>
<table class="table">
    <tr>
        <th>Nombre</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>      
            <td>
                <a href="@Url.Action("Edit",new {id=item.UnidadMedidaID })">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

